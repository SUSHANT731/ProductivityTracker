<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/main_act">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What type of activity are you adding?"
        android:id="@+id/textView"
        android:layout_above="@+id/addProductiveBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productive"
        android:id="@+id/addProductiveBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unproductive"
        android:id="@+id/addUnproductiveBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Graph"
        android:id="@+id/GraphBtn"
        android:layout_alignTop="@+id/addUnproductiveBtn"
        android:layout_alignLeft="@+id/addProductiveBtn"
        android:layout_alignStart="@+id/addProductiveBtn"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigation Test"
        android:id="@+id/NavTestBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/GraphBtn"
        android:layout_alignEnd="@+id/GraphBtn" />

</RelativeLayout>
